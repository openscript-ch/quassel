---
import Bubbles from "../components/Bubbles.astro";
import type { ComponentProps } from "astro/types";
import AccordionItem from "../components/AccordionItem.astro";
import type { JSX } from "astro/jsx-runtime";
import IconCalendar from "~icons/tabler/calendar-week";
import Accordion from "../components/Accordion.astro";

type AccordionItemProps = ComponentProps<typeof AccordionItem> & { icon: (props: JSX.SVGAttributes) => JSX.Element };

const items: AccordionItemProps[] = [
  {
    icon: IconCalendar,
    title: "Entry for studies",
    description: "The description for Entry for studies.",
    screenshot: "blub",
  },
  {
    icon: IconCalendar,
    title: "Default data management",
    description: "Store the data about carersâ€™ background information.",
    screenshot: "blub",
  },
  {
    icon: IconCalendar,
    title: "Export raw data to CSV",
    description: "The description for Export raw data to CSV.",
    screenshot: "blub",
  },
  {
    icon: IconCalendar,
    title: "Consolidate data into reports",
    description: "The description for Consolidate data into reports.",
    screenshot: "blub",
  },
];
---

<style>
  section {
    display: flex;
    flex-direction: column;
    padding: 0;
    margin-left: 20%;
    margin-right: 20%;
  }

  .moreFunctions {
    text-align: start;
  }
</style>

<section>
  <div class="administration">
    <h2>Solution for Administrative Needs</h2>
    <Accordion frame="laptop" imageLeft>
      {
        items.map((item) => {
          const Icon = item.icon;
          return (
            <AccordionItem {...item}>
              <Icon slot="icon" />
            </AccordionItem>
          );
        })
      }
    </Accordion>
    <div class="moreFunctions">
      <p>More functions</p>
      <Bubbles entries={["User management", "Data import", "Historical entires are saved"]} />
    </div>
  </div>
</section>
