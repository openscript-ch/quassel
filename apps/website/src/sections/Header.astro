---
import IconChevronRight from "~icons/tabler/chevron-right";
---

<style>
  header {
    display: flex;
    justify-content: space-between;
    align-items: baseline;
    padding-top: var(--spacing-lg);
    padding-bottom: var(--spacing-lg);
    margin-left: var(--spacing-xl);
    margin-right: var(--spacing-xl);
  }

  .brand {
    display: flex;
    gap: var(--spacing-md);
    color: var(--color-highlight);
    align-items: baseline;
  }

  h1 {
    margin: 0;
  }

  li a {
    display: flex;
    align-items: center;
    gap: 0.6 * var(--spacing-xs);
    line-height: 2rem;
    font-weight: var(--font-weight-semi-bold);
  }

  li a svg {
    transition: transform 0.2s ease;
  }

  li a:hover svg {
    transform: translateX(4px); /* Move the icon to the right */
  }
</style>

<header>
  <div class="brand">
    <h1>Quassel</h1>
    <img src="../assets/quassel-icon.svg" alt="Quassel logo" />
  </div>
  <nav>
    <ul>
      <li><a href="https://test.quassel.ch">Click to see the demo <IconChevronRight /></a></li>
    </ul>
  </nav>
</header>

<script>
  document.querySelectorAll("li a svg path").forEach((path) => {
    path.setAttribute("stroke-width", "3");
  });
</script>
