---
type CardsProps = {
  imgSrc: string;
  icon?: unknown;
  title: string;
  description: string;
};

type Props = {
  imgRight?: boolean;
  cards: CardsProps[];
};

const { cards, imgRight = false } = Astro.props;
---

<style>
  .cards-list {
    padding: 0;
    list-style: none;
    display: grid;
    gap: var(--spacing-md);
  }

  .card {
    display: flex;
    align-items: flex-start;
    flex-direction: row-reverse;
  }

  .content {
    flex-direction: column;
    margin: var(--spacing-lg);
  }

  .content-title {
    display: flex;
    gap: 1rem;
  }

  .right {
    flex-direction: row;
  }
</style>

<ul class="cards-list">
  {
    cards.map((card) => (
      <li>
        <div class:list={["card", { right: imgRight }]}>
          <div class="content">
            <div class="content-title">
              {card.icon && <Fragment>{card.icon}</Fragment>}
              <h3>{card.title}</h3>
            </div>
            <p class="hidden">{card.description}</p>
          </div>
          <img src={card.imgSrc} />
        </div>
      </li>
    ))
  }
</ul>
