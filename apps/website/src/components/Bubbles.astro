---
type Props = {
  entries: string[];
};

const { entries } = Astro.props;
---

<style>
  ul {
    padding: 0;
    list-style: none;
    display: flex;
    font-size: var(--font-size-sm);
    gap: var(--spacing-md);
  }

  li {
    background-color: var(--color-card);
    padding: var(--spacing-sm);
    border-radius: var(--radius-sm);
  }
</style>

<ul class="bubbles-list">
  {entries.map((entry) => <li>{entry}</li>)}
</ul>
