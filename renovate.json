{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "packageRules": [
    {
      "automerge": true,
      "automergeSchedule": ["after 3 days"],
      "groupName": "likely non breaking dependencies",
      "matchCurrentVersion": ">= 1.0.0",
      "matchUpdateTypes": [
        "minor",
        "patch"
      ]
    }
  ]
}
